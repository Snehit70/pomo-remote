<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Progress Arc Background (Track) -->
    <path
        android:pathData="M54,54 m-30,0 a30,30 0 1,1 60,0 a30,30 0 1,1 -60,0"
        android:strokeColor="#49454F"
        android:strokeWidth="8"
        android:fillColor="@android:color/transparent"/>

    <!-- Progress Arc (75% filled - Focus Coral) -->
    <path
        android:pathData="M54,24 A30,30 0 1,1 24,54"
        android:strokeWidth="8"
        android:strokeLineCap="round"
        android:fillColor="@android:color/transparent">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startX="24"
                android:startY="54"
                android:endX="54"
                android:endY="24"
                android:type="linear">
                <item android:offset="0.0" android:color="#FF6B6B"/>
                <item android:offset="1.0" android:color="#FF8E8E"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Center Dot (Focus Point) -->
    <path
        android:pathData="M54,54 m-8,0 a8,8 0 1,1 16,0 a8,8 0 1,1 -16,0"
        android:fillColor="#FFFFFF"/>

    <!-- Inner subtle glow -->
    <path
        android:pathData="M54,54 m-16,0 a16,16 0 1,1 32,0 a16,16 0 1,1 -32,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="16"
                android:type="radial">
                <item android:offset="0.5" android:color="#00FFFFFF"/>
                <item android:offset="1.0" android:color="#22FF6B6B"/>
            </gradient>
        </aapt:attr>
    </path>

</vector>
